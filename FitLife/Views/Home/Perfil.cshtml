@model UsuarioValidation

@{
    Usuario usuario = Context.Session.GetObject<Usuario>("user");
}

<form>
    <div class="container mx-auto max-w-7xl overflow-hidden bg-white dark:bg-gray-700 dark:text-white text-gray-900 shadow sm:rounded-lg"
         style="margin-top: 50px">
        <div class="px-4 py-5 sm:px-6">
            <h3 class="text-base font-semibold leading-6 dark:text-white text-gray-900">Información personal</h3>
            <p class="mt-1 max-w-2xl text-sm dark:text-white text-gray-900">Detalles personales</p>
        </div>
        <div class="border-t border-gray-200">
            <dl>
                <div class="bg-white dark:bg-gray-600 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                    <dt class="text-sm font-medium dark:text-white text-gray-900">Nombre</dt>
                    <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
                        <input type="text" id="edad" name="edad" asp-for="Nombre" value="@usuario.Nombre"
                               class="shadow-sm bg-gray-50 border border-gray-300 dark:white text-gray-900 dark:text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:placeholder-gray-400 dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light">
                        <span asp-validation-for="Nombre" class="mt-2 text-sm text-red-600 dark:text-red-500" id="error-nombre"></span>
                    </dd>
                </div>
                <div class="bg-white dark:bg-gray-700 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                    <dt class="text-sm font-medium dark:text-white text-gray-900">Apellidos</dt>
                    <dd class="mt-1 text-sm dark:text-white text-gray-900 sm:col-span-2 sm:mt-0">
                        <input type="text" id="apellidos" asp-for="Apellidos" value="@usuario.Apellidos"
                               class="shadow-sm bg-gray-50 border border-gray-300 dark:white text-gray-900 dark:text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:placeholder-gray-400 dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light">
                        <span asp-validation-for="Apellidos" class="mt-2 text-sm text-red-600 dark:text-red-500" id="error-apellidos"></span>
                    </dd>
                </div>
                <div class="bg-gray-50 dark:bg-gray-600 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                    <dt class="text-sm font-medium dark:text-white text-gray-900">Correo electrónico</dt>
                    <dd class="mt-1 text-sm dark:text-white text-gray-900 sm:col-span-2 sm:mt-0">
                        <input type="text" id="email" asp-for="Email" value="@usuario.Email"
                               class="shadow-sm bg-gray-50 border border-gray-300 dark:white text-gray-900 dark:text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:placeholder-gray-400 dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light">
                        <span asp-validation-for="Email" class="mt-2 text-sm text-red-600 dark:text-red-500" id="error-email"></span>
                    </dd>
                </div>
                <div class="bg-white dark:bg-gray-700 dark:bg-gray-700 dark:text-white text-gray-900 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                    <dt class="text-sm font-medium dark:text-white text-gray-900">DNI</dt>
                    <dd class="mt-1 text-sm dark:text-white text-gray-900 sm:col-span-2 sm:mt-0">
                        <input type="text" id="dni" asp-for="Dni" value="@usuario.Dni"
                               class="shadow-sm bg-gray-50 border border-gray-300 dark:white text-gray-900 dark:text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:placeholder-gray-400 dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light">
                        <span asp-validation-for="Apellidos" class="mt-2 text-sm text-red-600 dark:text-red-500" id="error-dni"></span>
                    </dd>
                </div>
                <div class="bg-gray-50 dark:bg-gray-600 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                    <dt class="text-sm font-medium dark:text-white text-gray-900">Password</dt>
                    <dd class="mt-1 text-sm dark:text-white text-gray-900 sm:col-span-2 sm:mt-0">
                        <input type="password" id="password" asp-for="Password" value="aaaaaa" readonly
                               class="shadow-sm bg-gray-50 border border-gray-300 dark:white text-gray-900 dark:text-white text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:placeholder-gray-400 dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light">
                        <span asp-validation-for="Email" class="mt-2 text-sm text-red-600 dark:text-red-500" id="error-password"></span>
                    </dd>
                </div>
                <div class="bg-gray-50 dark:bg-gray-700 px-4 py-5 sm:px-6">
                    <button type="submit"
                            id="buttonregister"
                            class="text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-blue-800">
                        Guardar
                    </button>
                </div>

            </dl>
        </div>
    </div>
</form>


