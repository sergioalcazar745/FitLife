@model List<ModelRutinaEjercicio>

@{
    Layout = "_LogLayout";
}

@{
    Rutina rutina = ViewData["RUTINA"] as Rutina;
}

@section styles{
    <style>
        @@media (max-width: 839px) {
            .contenedor-propiedades {
                grid-template-columns: repeat(4, 1fr);
            }
        }

        @@media (min-width: 839px) {
            .contenedor-propiedades {
                grid-template-columns: repeat(6, 1fr) 32px;
            }
        }
    </style>
}

<h1 class="text-4xl text-center text-white my-10">@rutina.Fecha.ToString("dd/MM/yyyy") - @rutina.Nombre</h1>
<div id="contenedor">
    @foreach (ModelRutinaEjercicio ejercicio in Model)
    {
        <section>
            <div class="relative z-0 w-full mb-6 group border-t border-gray-700 pt-5">
                <label for="ejercicio" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Ejercicio</label>
                <input type="text" name="nombre" id="nombre" value="@ejercicio.Nombre" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" required>
            </div>
            <div class="grid gap-6 contenedor-propiedades">
                <div class="relative z-0 w-full mb-6 group">
                    <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Series</label>
                    <input type="number" value="@ejercicio.Series" min="0" max="10" name="series${contador}" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-gray-500 focus:border-gray-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-gray-500 dark:focus:border-gray-500" required>
                </div>
                <div class="relative z-0 w-full mb-6 group">
                    <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Repes</label>
                    <input type="number" value="@ejercicio.Repeticiones" min="0" max="10" name="repes${contador}" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-gray-500 focus:border-gray-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-gray-500 dark:focus:border-gray-500" required>
                </div>
                <div class="relative z-0 w-full mb-6 group">
                    <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Bajada</label>
                    <input type="number" value="@ejercicio.PausaBajada" min="0" max="10" name="bajada${contador}" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-gray-500 focus:border-gray-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-gray-500 dark:focus:border-gray-500" required>
                </div>
                <div class="relative z-0 w-full mb-6 group">
                    <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Subida</label>
                    <input type="number" value="@ejercicio.PausaSubida" min="0" max="10" name="subida${contador}" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-gray-500 focus:border-gray-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-gray-500 dark:focus:border-gray-500" required>
                </div>
                <div class="relative z-0 w-full mb-6 group">
                    <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Aguante</label>
                    <input type="number" value="@ejercicio.PausaAguante" min="0" max="10" name="aguante${contador}" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-gray-500 focus:border-gray-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-gray-500 dark:focus:border-gray-500" required>
                </div>
                <div class="relative z-0 w-full mb-6 group">
                    <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Arroba</label>
                    <input type="number" value="@ejercicio.Arroba" min="0" max="10" name="arroba${contador}" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-gray-500 focus:border-gray-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-gray-500 dark:focus:border-gray-500" required>
                </div>
            </div>
        </section>
    }
</div>
<a asp-action="ELiminarRutina" asp-controller="Entrenador" asp-route-idrutina="@rutina.IdRutina"
   class="focus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900">
    Eliminar
</a>