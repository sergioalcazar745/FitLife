@model List<ModelDieta>

@{
    Layout = "_LogLayout";
}

@section styles{
    <style>
        /*        @@media (max-width: 839px) {
                                                    .fechas {
                                                        grid-template-columns: repeat(1, 1fr);
                                                    }
                                                }*/

        @@media (min-width: 500px) {
            .fechas {
                grid-template-columns: repeat(2, 1fr) 100px;
            }
        }
    </style>
}

<h1 class="text-white text-center my-10 text-5xl">DIETAS</h1>

<div class="mb-4">
    <form method="post">
        <div class="grid gap-6 fechas">
            <div class="relative w-full">
                <input type="date" name="fechainicio"
                       class="block p-2.5 w-full z-20 text-sm text-gray-900 bg-gray-50 rounded-lg border-l-gray-50 border-l-2 border border-gray-300 focus:ring-gray-500 focus:border-gray-500 dark:bg-gray-700 dark:border-l-gray-700  dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:border-gray-500"
                       placeholder="Busca un cliente..." />
            </div>
            <div class="relative w-full">
                <input type="date" name="fechafinal"
                       class="block p-2.5 w-full z-20 text-sm text-gray-900 bg-gray-50 rounded-lg border-l-gray-50 border-l-2 border border-gray-300 focus:ring-gray-500 focus:border-gray-500 dark:bg-gray-700 dark:border-l-gray-700  dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:border-gray-500"
                       placeholder="Busca un cliente..." />
            </div>
            <button type="submit" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">Filtrar</button>
        </div>
    </form>
</div>

<h2 class="my-6 text-gray-400 text-2xl text-center">@ViewData["FILTRO"]</h2>

@if (ViewData["MENSAJE"] != null)
{
    <div class="flex p-4 my-4 text-sm text-green-800 rounded-lg bg-green-50 dark:bg-green-800 dark:text-green-400" role="alert" id="alerta">
        <svg aria-hidden="true" class="flex-shrink-0 inline w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path></svg>
        <span class="sr-only">Info</span>
        <div>
            <span class="font-medium text-white">@ViewData["MENSAJE"]</span>
        </div>
        <button type="button" class="ml-auto -mx-1.5 -my-1.5 bg-blue-50 text-blue-500 rounded-lg focus:ring-2 focus:ring-blue-400 p-1.5 hover:bg-blue-200 inline-flex h-8 w-8 dark:bg-gray-800 dark:text-blue-400 dark:hover:bg-gray-700" data-dismiss-target="#alerta" aria-label="Close">
            <span class="sr-only">Dismiss</span>
            <svg aria-hidden="true" class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
        </button>
    </div>
}

@foreach (ModelDieta dieta in Model)
{
    <div class="m-3">
        <a href="/Dietista/DetallesDieta?iddieta=@dieta.IdDieta" class="block w-full mb-3 p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700">
            <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">@dieta.Fecha.ToString("dd/MM/yyyy")</h5>
            <h5 class="mb-2 text-xl font-bold tracking-tight text-gray-900 dark:text-white">@dieta.Nombre</h5>
        </a>
    </div>
}


@if (Model.Count == 0)
{
    <h1 class="text-white text-center text-xl">NO HAY DIETAS</h1>
}
